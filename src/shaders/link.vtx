#version 410 core

layout(location = 0) in vec2 pos;
layout(location = 1) in float state;

uniform matrixBlock
{
	mat4 projView;
	float ratio;
}matrices;

out vec4 vtxColor;
out float f_state;

void	main()
{
	float f_state;
	gl_Position = matrices.projView * vec4(pos, 0.0, 1.0);
	f_state = state;
	vtxColor = vec4(1.0, 1. - state, 1. - state, 1.0);
}
