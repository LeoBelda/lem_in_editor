#version 410 core

layout(location = 0) in vec2 pos;
layout(location = 1) in float state;

uniform matrixBlock
{
	mat4 projView;
	float ratio;
}matrices;

out float f_state;

void	main()
{
	float t_state;
	gl_Position = matrices.projView * vec4(pos, 0.0, 1.0);
	t_state = state * matrices.ratio;
	f_state = state;
}
