#version 410 core

layout(location = 1) in vec2 pos;
layout(location = 2) in ivec2 state;

uniform matrixBlock
{
	mat4 projView;
	float ratio;
}matrices;

out vec4 vtxColor;
out vec2 out_state;

void	main()
{
	gl_Position = matrices.projView * vec4(pos, 0.0, 1.0);
	out_state = vec2(float(state.x), float(state.y));
	vtxColor = vec4(1.0, 1.0, 1.0, 1.0) * matrices.ratio;
}
